<script>
  $("#dataTable").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let nisn = $(this).data("nisn");
    let name = $(this).data("name");
    let kelas = $(this).data("kelas");
    let tahun = $(this).data("tahun");
    $("#edit-modal").modal("show");
    $(".id").val(id);
    $(".nisn").val(nisn);
    $(".name").val(name);
    $(".kelas").val(kelas);
    $(".tahun").val(tahun);
  });
</script>
