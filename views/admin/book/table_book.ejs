<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#add-modal"
      >
        Tambah Buku
      </button>
    </h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Kode Buku</th>
            <th>Nama Buku</th>
            <th>Penerbit</th>
            <th>Kategori</th>
            <th>Jumlah Buku</th>
            <th>Gambar</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < book.length; i++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= book[i].code %></td>
            <td><%= book[i].title %></td>
            <td><%= book[i].penerbit %></td>
            <td><%= book[i].category %></td>
            <td><%= book[i].jumlah %></td>
            <td>
              <img
                src="http://localhost:3000/<%= book[i].image %>"
                alt="image"
                width="70px"
                height="70px"
              />
            </td>
            <td>
              <form
                action="/admin/book/<%= book[i].id %>?_method=DELETE"
                method="post"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle button-update"
                  data-id="<%= book[i].id %>"
                  data-code="<%= book[i].code %>"
                  data-title="<%= book[i].title %>"
                  data-penerbit="<%= book[i].penerbit %>"
                  data-category="<%= book[i].category%>"
                  data-image="<% book[i].image %> "
                  ><i class="fas fa-edit"></i
                ></a>
                <button type="submit" class="btn btn-danger btn-circle">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
