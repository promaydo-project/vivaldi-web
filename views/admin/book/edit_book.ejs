<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Peminjaman Buku</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            </div>

            <form action="/admin/book?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Kode Buku</label>
                        <input type="text" class="form-control code" name="code" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama Buku</label>
                        <input type="text" class="form-control title" name="title" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Penerbit</label>
                        <input type="text" class="form-control penerbit" name="penerbit" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Kategori</label>
                        <input type="text" class="form-control category" name="category" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Jumlah Buku</label>
                        <input type="number" class="form-control jumlah" name="jumlah" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Gambar</label>
                        <input type="file" class="form-control" name="image" multiple>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Tambah Data</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>